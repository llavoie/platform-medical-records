<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <import resource="classpath*:META-INF/motech/*.xml" />

    <context:annotation-config/>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor" />



    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="url" value="../mrs/index.html"/>
        <constructor-arg name="moduleName" value="data.provider.mrs.name"/>
        <constructor-arg name="angularModules">
            <list>
                <value>motech-mrs</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../mrs/bundles/"/>
            </map>
        </constructor-arg>
        <constructor-arg name="header" ref="header"/>
    </bean>

    <bean id="header" class="org.motechproject.osgi.web.Header"></bean>


</beans>